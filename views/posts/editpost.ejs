<% layout("layouts/boilerplate.ejs") %>

<main class="edit-post-container">
    <div class="edit-post-card">
        <h1>Edit Post</h1>
        <form action="/<%= user.id %>/editpost/<%= post.id %>" method="POST">
            <textarea name="content" required rows="6"><%= post.content %></textarea>
            <input type="hidden" name="user_id" value="<%= user.id %>">
            <button type="submit" class="btn-update">Update Post</button>
        </form>
        <p class="mt-3">
            <a href="/<%= user.id %>/post/<%= post.id %>" class="back-link">&larr; Back to Post</a>
        </p>
    </div>
</main>
